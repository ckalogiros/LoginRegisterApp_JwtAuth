<title>Reset Password</title>
<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3"> <i class="fas fa-user-plus "></i>Reset Password</h1>
            <form action="/users/auth/resetPwd" method="POST">
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="text" id="password" name="password" class="form-control" placeholder="Enter new Password" autocomplete="off"/>
                </div>
                <div class="form-group">
                    <label for="password2">Confirm Password</label>
                    <input type="text" id="password2" name="password2" class="form-control" placeholder="Confirm new Password"/>
                </div>
                <button type="submit" class="btn btn-primary btn-block mt-3">Submit</button>
            </form>
        </div>
    </div>
</div>